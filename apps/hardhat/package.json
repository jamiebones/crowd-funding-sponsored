{
    "name": "blockchain-based-crowdfunding-project",
    "description": "A blockchain-based crowdfunding project",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "coverage": "hardhat coverage",
        "deploy": "hardhat run scripts/deploy.ts",
        "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
        "deploy:bscTestnet": "hardhat run scripts/deploy.ts --network bscTestnet",
        "deploy:rskTestnet": "hardhat run scripts/deploy.ts --network rskTestnet",
        "deploy:rskMainnet": "hardhat run scripts/deploy.ts --network rskMainnet",
        "verify": "hardhat run scripts/verify.ts",
        "verify:bscTestnet": "hardhat run scripts/verify.ts --network bscTestnet",
        "verify:rskTestnet": "hardhat run scripts/verify.ts --network rskTestnet",
        "verify:rskMainnet": "hardhat run scripts/verify.ts --network rskMainnet",
        "check": "hardhat run scripts/check-deployment.ts",
        "check:bscTestnet": "NETWORK=bscTestnet hardhat run scripts/check-deployment.ts --network bscTestnet",
        "check:rskTestnet": "NETWORK=rskTestnet hardhat run scripts/check-deployment.ts --network rskTestnet",
        "check:rskMainnet": "NETWORK=rskMainnet hardhat run scripts/check-deployment.ts --network rskMainnet",
        "export-addresses": "ts-node scripts/export-addresses.ts",
        "node": "hardhat node",
        "sol:format:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
        "sol:format:write": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
        "solhint": "solhint -f table 'contracts/**/*.sol'",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "dependencies": {
        "@openzeppelin/contracts": "5.0.2",
        "network-helpers": "link:@nomicfoundation/hardhat-toolbox-viem/network-helpers",
        "save-dev": "0.0.1-security",
        "viem": "^2.22.3"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
        "@nomicfoundation/hardhat-ethers": "^3.1.2",
        "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@nomicfoundation/hardhat-verify": "^2.1.3",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "chai": "^4.3.10",
        "dotenv": "^16.4.7",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "ethers": "^6.4.0",
        "hardhat": "^2.27.0",
        "prettier": "^3.0.3",
        "prettier-plugin-solidity": "^1.2.0",
        "solhint": "^4.0.0",
        "ts-node": "^10.9.2",
        "typechain": "^8.3.0",
        "typescript": "^5.3.3"
    }
}